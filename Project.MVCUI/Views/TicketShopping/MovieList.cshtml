@model ListMoviePageVM
@{
    ViewBag.Title = "MovieList";
}


<table class="table table-hover">
    <tr>
        <th>FilmTitle</th>
        <th></th>
        <th style="position:relative;left:210px">Islemler</th>
        <th></th>
        

    </tr>
    
    @foreach (MovieVM item in Model.Movies)
    {
        <tr>
            <td>@item.FilmTitle</td>
            <td><img src="/Pictures/@item.ImagePath" alt="Resim yok" width="200" height="250" title="@item.FilmTitle" /></td>
            <td>@Html.ActionLink("MakeReservation", "MakeReservation", new { title = item.FilmTitle,}, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("TakeTicket", "TakeTicket", new { title = item.FilmTitle }, new { @class = "btn btn-primary" })</td>


        </tr>
    }

</table>









